[Unit]
Description = DJMmount

[Service]
ExecStart=/usr/bin/djmount -o iocharset=utf8 /mnt/UPNP
ExecStop=/usr/bin/killall djmount && fusermount -u /mnt/UPNP
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=djmount
User=volumio
Group=volumio


[Install]
WantedBy=multi-user.target
